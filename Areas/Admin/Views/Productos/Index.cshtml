
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de Productos</h2>

    </div>
    <div class="col-6 text-right" style="text-align:right;">
        <a class="btn btn-primary" asp-action="Upsert"> <i class="fa-solid fa-plus"></i> Agregar </a>

    </div>

</div>
<br />
<div class="p-4 border rounded">
    <table id="tblDatos" class="table table-striped table-bordered w-100">

        <thead class="thead-dark">
            <tr class="table-info">
                <th>Numero Serie</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Marca</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/Producto.js"></script>
}